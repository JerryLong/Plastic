<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_bg"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/user_company_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height_48"
            android:background="@drawable/item_bg_line"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/space_16"
            android:paddingRight="@dimen/space_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/space_8"
                android:text="公司名称*"
                android:textColor="@color/text_common"
                android:textSize="@dimen/textSize_16" />

            <TextView
                android:id="@+id/company_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/icon_right_arrow"
                android:gravity="right"
                android:text="无"
                android:textColor="@color/text_content"
                android:textSize="@dimen/textSize_14" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/user_address_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height_48"
            android:background="@drawable/item_bg_line"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/space_16"
            android:paddingRight="@dimen/space_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/space_8"
                android:text="地址*"
                android:textColor="@color/text_common"
                android:textSize="@dimen/textSize_16" />

            <TextView
                android:id="@+id/address_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/icon_right_arrow"
                android:ellipsize="end"
                android:gravity="right"
                android:maxLines="1"
                android:text="无"
                android:textColor="@color/text_content"
                android:textSize="@dimen/textSize_14" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/user_logo_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height_48"
            android:background="@drawable/item_bg_line"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/space_16"
            android:paddingRight="@dimen/space_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/space_8"
                android:text="品牌"
                android:textColor="@color/text_common"
                android:textSize="@dimen/textSize_16" />

            <TextView
                android:id="@+id/user_logo_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/icon_right_arrow"
                android:ellipsize="end"
                android:gravity="right"
                android:maxLines="1"
                android:text="无"
                android:textColor="@color/text_content"
                android:textSize="@dimen/textSize_14" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/user_position_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height_48"
            android:background="@drawable/item_bg_line"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/space_16"
            android:paddingRight="@dimen/space_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/space_8"
                android:text="职位"
                android:textColor="@color/text_common"
                android:textSize="@dimen/textSize_16" />

            <TextView
                android:id="@+id/user_position_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/icon_right_arrow"
                android:ellipsize="end"
                android:gravity="right"
                android:maxLines="1"
                android:text="无"
                android:textColor="@color/text_content"
                android:textSize="@dimen/textSize_14" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/user_license_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height_48"
            android:background="@drawable/item_bg_line"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/space_16"
            android:paddingRight="@dimen/space_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/space_8"
                android:text="营业执照"
                android:textColor="@color/text_common"
                android:textSize="@dimen/textSize_16" />

            <ImageView
                android:id="@+id/license_img"
                android:layout_width="@dimen/btn_height_44"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:src="@mipmap/icon_head" />

        </RelativeLayout>

