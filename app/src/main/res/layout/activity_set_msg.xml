<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"    android:background="@color/main_bg"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp">

        <android.support.v4.widget.Space
            android:id="@+id/mine_spaces"
            android:layout_width="match_parent"

            android:layout_height="50dp" />

        <RelativeLayout
            android:id="@+id/msg_notice"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height_48"
            android:layout_below="@id/mine_spaces"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="消息通知"
                android:textColor="@color/text_common"
                android:textSize="@dimen/textSize_18" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/msg_notice_switch"
                android:theme="@style/BrandedSwitch.control"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_0_5"
                android:layout_alignParentBottom="true"
                android:background="@color/bg_gray" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/msg_vibration"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height_48"
            android:layout_below="@id/msg_notice"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="振动"
                android:textColor="@color/text_common"
                android:textSize="@dimen/textSize_18" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/msg_vibration_switch"
                android:theme="@style/BrandedSwitch.control"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_0_5"
                android:layout_alignParentBottom="true"
                android:background="@color/bg_gray" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/msg_voice"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height_48"
            android:layout_below="@id/msg_vibration"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="声音"
                android:textColor="@color/text_common"
                android:textSize="@dimen/textSize_18" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/msg_voice_switch"
                android:theme="@style/BrandedSwitch.control"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_0_5"
                android:layout_alignParentBottom="true"
                android:background="@color/bg_gray" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/msg_disturb"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height_48"
            android:layout_below="@id/msg_voice"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="夜间免打扰（22:00--8:00）"
                android:textColor="@color/text_common"
                android:textSize="@dimen/textSize_18" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/msg_disturb_switch"
                android:theme="@style/BrandedSwitch.control"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_0_5"
                android:layout_alignParentBottom="true"
                android:background="@color/bg_gray" />
        </RelativeLayout>


    </RelativeLayout>
</LinearLayout>