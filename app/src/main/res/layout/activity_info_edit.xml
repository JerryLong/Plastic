<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/allStatus"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.conduit.plastic.view.tablayout.SlidingTabLayout
            android:id="@+id/info_edit_tabs"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:tl_divider_color="#1A000000"
            app:tl_divider_padding="13dp"
            app:tl_divider_width="1dp"
            app:tl_textsize="@dimen/textSize_16"
            app:tl_tab_space_equal="true"
            app:tl_indicator_height="0dp" />

        <android.support.v4.view.ViewPager
            android:id="@+id/info_edit_vpager"
            android:layout_below="@id/info_edit_tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white" />
    </RelativeLayout>
</LinearLayout>