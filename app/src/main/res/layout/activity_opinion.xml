<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:stv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="问题和反馈" />

    <EditText
        android:id="@+id/alert_old"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="5dp"
        android:background="@color/white"
        android:gravity="top"
        android:hint="请输入您的问题描述或意见"
        android:padding="15dp" />

    <com.allen.library.SuperTextView
        android:id="@+id/alert_confirm"
        stv:sBackgroundDrawableRes="@drawable/btn_blue_gray"
        stv:sCenterTextColor="@color/white"
        stv:sCenterTextSize="16sp"
        stv:sCenterTextString="确  定"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp" />
</LinearLayout>
