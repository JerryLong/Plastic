<?xml version="1.0" encoding="utf-8"?>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"  xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="5dp"
       android:orientation="horizontal">

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:padding="7dp"
           android:background="@color/transparent_db"
           android:textColor="#424242"    android:text="aaaa"
           android:textSize="18sp"
           android:id="@+id/text_section"
           android:layout_weight="0.12"/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:gravity="center"
           android:paddingRight="10dp"
           android:background="@color/transparent_db"
           android:textColor="@color/colorPrimary"
           android:textSize="14sp"
           android:text="[展开]"
           android:id="@+id/text_sectiontoggle"

          />

       <ToggleButton
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:visibility="gone"
           android:id="@+id/toggle_button_section"
           android:contentDescription="@string/password_toggle_content_description"
           android:background="@drawable/selector_section_toggle"
           android:padding="7dp"
           android:textOn=""
           android:textOff=""
           android:layout_weight="0.88"/>

   </LinearLayout>
