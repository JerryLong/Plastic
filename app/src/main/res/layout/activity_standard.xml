<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--<android.support.v7.widget.RecyclerView-->
    <!--android:id="@+id/standard_recycler"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content" />-->
    <RadioGroup
        android:id="@+id/standard_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="5dp">


        <RadioButton
            android:id="@+id/standard_one"
            style="@style/main_bottom_tab_style"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/tag_selector"
            android:text="国标(DIN)" />


        <RadioButton
            android:id="@+id/standard_two"
            style="@style/main_bottom_tab_style"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/tag_selector"
            android:text="美标(SCH/ANSI)" />

        <RadioButton
            android:id="@+id/standard_three"
            style="@style/main_bottom_tab_style"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/tag_selector"
            android:text="日标(JIS)" />

        <RadioButton
            android:id="@+id/standard_four"
            style="@style/main_bottom_tab_style"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/tag_selector"
            android:text="英标(BS)" />
    </RadioGroup>

    <Button
        android:id="@+id/standard_confirm"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@+id/standard_group"
        android:layout_centerHorizontal="true"
        android:layout_margin="40dp"
        android:background="@drawable/btn_blue_gray"
        android:text="确\t\t\t定"
        android:textColor="@color/white" />

</RelativeLayout>
