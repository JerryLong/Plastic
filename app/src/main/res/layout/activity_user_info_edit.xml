<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/main_bg"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/user_name_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_bg_line"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/space_18"
                android:paddingLeft="@dimen/space_16"
                android:paddingRight="@dimen/space_16"
                android:paddingTop="@dimen/space_18">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/space_8"
                    android:text="*真实姓名"
                    android:textColor="@color/text_common"
                    android:textSize="@dimen/textSize_14" />

                <TextView
                    android:id="@+id/name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="无"
                    android:textColor="@color/text_content"
                    android:textSize="@dimen/textSize_12" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/user_sex_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_bg_line"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/space_18"
                android:paddingLeft="@dimen/space_16"
                android:paddingRight="@dimen/space_16"
                android:paddingTop="@dimen/space_18">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/space_8"
                    android:text="*性别"
                    android:textColor="@color/text_common"
                    android:textSize="@dimen/textSize_14" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/sex_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="男"
                        android:textColor="@color/text_content"
                        android:textSize="@dimen/textSize_12" />
                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/sex_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@id/sex_tv"
                        android:layout_marginRight="20dp" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/user_idcard_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_bg_line"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/space_18"
                android:paddingLeft="@dimen/space_16"
                android:paddingRight="@dimen/space_16"
                android:paddingTop="@dimen/space_18">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/space_8"
                    android:text=" 身份证"
                    android:textColor="@color/text_common"
                    android:textSize="@dimen/textSize_14" />

                <TextView
                    android:id="@+id/idcard_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:maxLines="1"
                    android:text="无"
                    android:textColor="@color/text_content"
                    android:textSize="@dimen/textSize_12" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/user_position_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_bg_line"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/space_20"
                android:paddingLeft="@dimen/space_18"
                android:paddingRight="@dimen/space_18"
                android:paddingTop="@dimen/space_20">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/space_8"
                    android:text=" 职位"
                    android:textColor="@color/text_common"
                    android:textSize="@dimen/textSize_14" />

                <TextView
                    android:id="@+id/user_position_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:maxLines="1"
                    android:text="无"
                    android:textColor="@color/text_content"
                    android:textSize="@dimen/textSize_12" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/user_card_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_bg_line"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/space_20"
                android:paddingLeft="@dimen/space_18"
                android:paddingRight="@dimen/space_18"
                android:paddingTop="@dimen/space_20">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/space_8"
                    android:text=" 个人名片"
                    android:textColor="@color/text_common"
                    android:textSize="@dimen/textSize_14" />

                <TextView
                    android:id="@+id/user_card_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:maxLines="1"
                    android:text="无"
                    android:textColor="@color/text_content"
                    android:textSize="@dimen/textSize_12" />

            </LinearLayout>

