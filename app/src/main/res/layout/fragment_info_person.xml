<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_bg"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/user_name_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height_48"
            android:background="@drawable/item_bg_line"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/space_16"
            android:paddingRight="@dimen/space_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/space_8"
                android:text="真实姓名*"
                android:textColor="@color/text_common"
                android:textSize="@dimen/textSize_16" />

            <TextView
                android:id="@+id/name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="无"       android:drawableRight="@mipmap/icon_right_arrow"
                android:textColor="@color/text_content"
                android:textSize="@dimen/textSize_14" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/user_sex_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height_48"
            android:background="@drawable/item_bg_line"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/space_16"
            android:paddingRight="@dimen/space_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="性别"
                android:textColor="@color/text_common"
                android:textSize="@dimen/textSize_14" />


            <android.support.v7.widget.SwitchCompat
                android:id="@+id/sex_switch"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:checked="true"
                android:textOff="女"
                android:textOn="男"
                android:theme="@style/BrandedSwitch.control"
                app:showText="true" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/user_idcard_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height_48"
            android:background="@drawable/item_bg_line"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/space_16"
            android:paddingRight="@dimen/space_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/space_8"
                android:text="身份证"
                android:textColor="@color/text_common"
                android:textSize="@dimen/textSize_16" />

            <TextView
                android:id="@+id/idcard_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="right"
                android:maxLines="1"       android:drawableRight="@mipmap/icon_right_arrow"
                android:text="无"
                android:textColor="@color/text_content"
                android:textSize="@dimen/textSize_14" />

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/user_card_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height_48"
            android:background="@drawable/item_bg_line"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/space_16"
            android:paddingRight="@dimen/space_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/space_8"
                android:text="头像"
                android:textColor="@color/text_common"
                android:textSize="@dimen/textSize_16" />

            <ImageView
                android:id="@+id/user_card_img"
                android:layout_width="@dimen/btn_height_44"
                android:layout_height="@dimen/btn_height_44"
                android:layout_alignParentRight="true"
                android:src="@mipmap/icon_head" />

        </RelativeLayout>

