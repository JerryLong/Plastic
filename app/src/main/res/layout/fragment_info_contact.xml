<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_bg"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/user_mphone_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height_48"
            android:background="@drawable/item_bg_line"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/space_16"
            android:paddingRight="@dimen/space_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/space_8"
                android:text="手机号码*"
                android:textColor="@color/text_common"
                android:textSize="@dimen/textSize_16" />

            <TextView
                android:id="@+id/mphone_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="--"       android:drawableRight="@mipmap/icon_right_arrow"
                android:textColor="@color/text_content"
                android:textSize="@dimen/textSize_14"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/user_telephone_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height_48"
            android:background="@drawable/item_bg_line"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/space_16"
            android:paddingRight="@dimen/space_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/space_8"
                android:text="公司座机*"
                android:textColor="@color/text_common"
                android:textSize="@dimen/textSize_16" />

            <TextView
                android:id="@+id/telephone_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="right"       android:drawableRight="@mipmap/icon_right_arrow"
                android:maxLines="1"
                android:text="--"
                android:textColor="@color/text_content"
                android:textSize="@dimen/textSize_14"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/user_qq_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height_48"
            android:background="@drawable/item_bg_line"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/space_16"
            android:paddingRight="@dimen/space_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/space_8"
                android:text="QQ账号"
                android:textColor="@color/text_common"
                android:textSize="@dimen/textSize_16" />

            <TextView
                android:id="@+id/qq_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="right"
                android:maxLines="1"       android:drawableRight="@mipmap/icon_right_arrow"
                android:text="--"
                android:textColor="@color/text_content"
                android:textSize="@dimen/textSize_14" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/user_wechat_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height_48"
            android:background="@drawable/item_bg_line"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/space_16"
            android:paddingRight="@dimen/space_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/space_8"
                android:text="微信账号"
                android:textColor="@color/text_common"
                android:textSize="@dimen/textSize_16" />

            <TextView
                android:id="@+id/wechat_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="right"
                android:maxLines="1"       android:drawableRight="@mipmap/icon_right_arrow"
                android:text="--"
                android:textColor="@color/text_content"
                android:textSize="@dimen/textSize_14" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/user_weibo_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height_48"
            android:background="@drawable/item_bg_line"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/space_16"
            android:paddingRight="@dimen/space_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/space_8"
                android:text="微博账号"
                android:textColor="@color/text_common"
                android:textSize="@dimen/textSize_16" />

            <TextView
                android:id="@+id/weibo_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="right"
                android:maxLines="1"       android:drawableRight="@mipmap/icon_right_arrow"
                android:text="--"
                android:textColor="@color/text_content"
                android:textSize="@dimen/textSize_14" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/user_email_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height_48"
            android:background="@drawable/item_bg_line"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/space_16"
            android:paddingRight="@dimen/space_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/space_8"
                android:text="邮箱地址"
                android:textColor="@color/text_common"
                android:textSize="@dimen/textSize_16" />

            <TextView
                android:id="@+id/email_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="right"       android:drawableRight="@mipmap/icon_right_arrow"
                android:maxLines="1"
                android:text="--"
                android:textColor="@color/text_content"
                android:textSize="@dimen/textSize_14"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>